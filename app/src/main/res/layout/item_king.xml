<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivKing"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/king_border"
            android:padding="4dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/tvKingName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Король людей"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvKingFaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Люди"
                android:textSize="14sp"
                android:textColor="#FF666666"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvKingDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Мудрый правитель человеческого королевства"
                android:textSize="12sp"
                android:textColor="#FF888888"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>