<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/king_card_bg"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivKing"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvKingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Имя короля"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvKingFaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Фракция"
        android:textSize="12sp"
        android:textColor="#3C3939"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvKingDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание короля"
        android:textSize="12sp"
        android:textColor="#444444"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2" />

</LinearLayout>